<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="leaveSheet"
            type="com.bqliang.leavesheet.LeaveSheet" />

        <import type="com.bqliang.leavesheet.utils.Converter" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:paddingLeft="12dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/id_num_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:text="编号:"
                android:textColor="@color/grey_details_property"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:text="@{Converter.getLeaveSheetNum(leaveSheet.applicationDate)}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/id_num_title"
                app:layout_constraintLeft_toRightOf="@id/phone_title"
                tools:text="202210230621" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_below_id_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_num_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/application_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:text="申请日期:"
                android:textColor="@color/grey_details_property"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_below_id_num" />

            <com.google.android.material.textview.MaterialTextView
                android:text="@{Converter.dateFormat(leaveSheet.applicationDate, false)}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/application_date_title"
                app:layout_constraintLeft_toRightOf="@id/phone_title"
                tools:text="2022-10-27" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_below_application_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/application_date_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/faculty_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:text="院系名称:"
                android:textColor="@color/grey_details_property"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_below_application_date" />

            <com.google.android.material.textview.MaterialTextView
                android:text="@{leaveSheet.faculty}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/faculty_name_title"
                app:layout_constraintLeft_toRightOf="@id/phone_title"
                tools:text="电气与计算机工程学院" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_below_faculty_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/faculty_name_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/major_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:text="专业名称:"
                android:textColor="@color/grey_details_property"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_below_faculty_name" />

            <com.google.android.material.textview.MaterialTextView
                android:text="@{leaveSheet.major}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/major_name_title"
                app:layout_constraintLeft_toRightOf="@id/phone_title"
                tools:text="XXXX" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_below_major_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/major_name_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/class_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:text="班级名称:"
                android:textColor="@color/grey_details_property"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_below_major_name" />

            <com.google.android.material.textview.MaterialTextView
                android:text="@{leaveSheet.className}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/class_name_title"
                app:layout_constraintLeft_toRightOf="@id/phone_title"
                tools:text="XXYY1班" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_below_class_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/class_name_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/applicant_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:text="申请人:"
                android:textColor="@color/grey_details_property"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_below_class_name" />

            <com.google.android.material.textview.MaterialTextView
                android:text="@{leaveSheet.applicant}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/applicant_title"
                app:layout_constraintLeft_toRightOf="@id/phone_title"
                tools:text="张三" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_below_applicant"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/applicant_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/stu_id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:text="学号:"
                android:textColor="@color/grey_details_property"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_below_applicant" />

            <com.google.android.material.textview.MaterialTextView
                android:text="@{leaveSheet.stuId}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/stu_id_title"
                app:layout_constraintLeft_toRightOf="@id/phone_title"
                tools:text="1234512345" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_below_stu_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/stu_id_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/phone_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingRight="45dp"
                android:text="申请人电话:"
                android:textColor="@color/grey_details_property"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_below_stu_id" />

            <com.google.android.material.textview.MaterialTextView
                android:text="@{leaveSheet.phone}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/phone_title"
                app:layout_constraintLeft_toRightOf="@id/phone_title"
                tools:text="12345123451" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_below_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/phone_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:text="请假类型:"
                android:textColor="@color/grey_details_property"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_below_phone" />

            <com.google.android.material.textview.MaterialTextView
                android:text="@{leaveSheet.type}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/type_title"
                app:layout_constraintLeft_toRightOf="@id/phone_title"
                tools:text="病假" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_below_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/type_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/start_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:text="开始日期:"
                android:textColor="@color/grey_details_property"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_below_type" />

            <com.google.android.material.textview.MaterialTextView
                android:text="@{Converter.dateFormat(leaveSheet.startTime, true)}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/start_date_title"
                app:layout_constraintLeft_toRightOf="@id/phone_title"
                tools:text="2022-10-27 上午" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_below_start_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/start_date_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/end_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:text="结束日期:"
                android:textColor="@color/grey_details_property"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_below_start_date" />

            <com.google.android.material.textview.MaterialTextView
                android:text="@{Converter.dateFormat(leaveSheet.endTime, true)}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/end_date_title"
                app:layout_constraintLeft_toRightOf="@id/phone_title"
                tools:text="2022-10-27 下午" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_below_end_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/end_date_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/duration_days_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:text="请假天数:"
                android:textColor="@color/grey_details_property"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_below_end_date" />

            <com.google.android.material.textview.MaterialTextView
                android:text="@{Converter.durationInDayFormat(leaveSheet.durationInDays)}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBaseline_toBaselineOf="@id/duration_days_title"
                app:layout_constraintLeft_toRightOf="@id/phone_title"
                tools:text="1" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_below_duration_days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/duration_days_title" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/reason_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:text="请假原因:"
                android:textColor="@color/grey_details_property"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider_below_duration_days"
                app:layout_constraintBottom_toTopOf="@id/divider_below_reason"/>

            <com.google.android.material.textview.MaterialTextView
                android:text="@{leaveSheet.reason}"
                android:id="@+id/reason_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:paddingRight="18dp"
                app:layout_constraintLeft_toRightOf="@id/phone_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_below_duration_days"
                tools:text="XXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_below_reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reason_content" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/counselor_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:text="审核辅导员:"
                android:textColor="@color/grey_details_property"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider_below_reason" />

            <com.google.android.material.divider.MaterialDivider
                android:visibility="invisible"
                android:id="@+id/divider_below_counselor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/counselor_title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>
</layout>

