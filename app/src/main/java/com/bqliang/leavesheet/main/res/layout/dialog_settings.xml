<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="faculty_audit_visible"
            type="androidx.lifecycle.LiveData&lt;Boolean>" />

        <import type="com.bqliang.leavesheet.R" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/faculty_audit_visibility_preference"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:baselineAligned="false"
            android:clickable="true"
            android:clipToPadding="false"
            android:focusable="true"
            android:gravity="center_vertical"
            android:minHeight="?android:attr/listPreferredItemHeightSmall"
            android:paddingStart="?android:attr/listPreferredItemPaddingStart"
            android:paddingLeft="?android:attr/listPreferredItemPaddingLeft"
            android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
            android:paddingRight="?android:attr/listPreferredItemPaddingRight">

            <androidx.appcompat.widget.AppCompatImageView
                icon="@{faculty_audit_visible ? @drawable/ic_round_visibility_24 : @drawable/ic_round_visibility_off_24}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:maxWidth="48dp"
                android:maxHeight="48dp"
                tools:srcCompat="@drawable/ic_round_visibility_24" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingVertical="16dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/faculty_audit_visibility_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2sp"
                    android:ellipsize="marquee"
                    android:maxLines="2"
                    android:text="显示院系办公室审核意见"
                    android:textAppearance="?android:attr/textAppearanceListItem" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@android:id/summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/faculty_audit_visibility_title"
                    android:layout_alignLeft="@+id/faculty_audit_visibility_title"
                    android:layout_gravity="start"
                    android:maxLines="10"
                    android:text="@{@string/faculty_audit_visibility_status(faculty_audit_visible ? `可见` : `隐藏`)}"
                    android:textAlignment="viewStart"
                    android:textColor="?android:attr/textColorSecondary"
                    tools:text="当前状态: 隐藏" />

            </RelativeLayout>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/faculty_audit_visibility_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:checked="@{faculty_audit_visible}" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>